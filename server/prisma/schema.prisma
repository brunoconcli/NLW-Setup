generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// uuid : universal unique inndentifier
// migrations: versionamento do banco de dados
model Habit {
  id String @id @default(uuid())
  title String
  created_at DateTime

  @@map("habits")
}